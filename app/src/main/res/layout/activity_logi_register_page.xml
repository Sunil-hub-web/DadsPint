<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.in.dadspint.LogiRegisterPage"
    android:background="#E0F2F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="1"
        android:background="#E0F2F1">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="@dimen/fifty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/dadapicon"></ImageView>

        <RelativeLayout
            android:id="@+id/loginsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="LOGIN / REGISTER"
                android:textColor="@color/bluedrack"
                android:textSize="@dimen/edittextsize"
                android:fontFamily="@font/sans_bold"></TextView>

            <!-- <TextView
                 android:id="@+id/signup"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="50dp"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@id/login"
                 android:layout_weight="1"
                 android:text="SIGN UP"
                 android:textColor="@color/bluedrack"
                 android:textSize="@dimen/edittextsize"
                 android:fontFamily="@font/sans_bold"></TextView>-->

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginsignup"
            android:layout_marginTop="10dp"></FrameLayout>


    </RelativeLayout>

</RelativeLayout>