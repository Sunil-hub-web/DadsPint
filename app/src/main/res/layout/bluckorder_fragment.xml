<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_Organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/textfieldback"
            android:hint="Name of Organization"
            android:padding="@dimen/twelve"></EditText>

        <EditText
            android:id="@+id/edit_EmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/textfieldback"
            android:hint="Email Id"
            android:padding="@dimen/twelve"></EditText>

        <EditText
            android:id="@+id/edit_MobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/textfieldback"
            android:hint="Quentity"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/twelve"></EditText>
        <EditText
            android:id="@+id/edit_uentity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/textfieldback"
            android:hint="phone no"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/twelve"></EditText>
        <EditText
            android:id="@+id/edit_ProductDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/four"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:background="@drawable/textfieldback"
            android:gravity="top"
            android:hint="Product Details"
            android:padding="@dimen/fifteen" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/four"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:background="@drawable/textfieldback"
            android:gravity="top"
            android:hint="message"
            android:padding="@dimen/fifteen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_BlukOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sans_bold"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="@color/bluedrack"
            app:cornerRadius="@dimen/ten" />

    </LinearLayout>

</RelativeLayout>